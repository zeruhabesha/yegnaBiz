# Copy this file to .env.docker before running docker compose
# Update the secrets and integration keys with production values.

# Application
NODE_ENV=production
APP_PORT=3000
JWT_SECRET=change-me-in-production

# Contact form email delivery
CONTACT_RECIPIENT_EMAIL=team@yegnabiz.local
SMTP_FROM_EMAIL=noreply@yegnabiz.local
# For production replace MailHog with your real SMTP host/port and credentials
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=false

# Google reCAPTCHA keys (replace with real keys for production)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Optional: use PostgreSQL instead of the JSON data store
# DATABASE_URL=postgresql://username:password@postgres:5432/yegnabiz
# DATABASE_SSL=false
