# Google reCAPTCHA v2 Keys
# Get your keys from: https://www.google.com/recaptcha/admin/create

# Public Site Key (visible in browser)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_site_key_here

# Secret Key (server-side only)
RECAPTCHA_SECRET_KEY=your_secret_key_here

# JWT Secret for Authentication
# Generate a secure random string for production
JWT_SECRET=your_jwt_secret_key_here

# Contact form email delivery (required in production)
CONTACT_RECIPIENT_EMAIL=support@yegnabiz.com
SMTP_FROM_EMAIL=YegnaBiz <no-reply@yegnabiz.com>
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=smtp_username
SMTP_PASS=smtp_password
# Set to "true" for port 465 or other TLS-only providers
SMTP_SECURE=false

# Optional: PostgreSQL connection (if not using the JSON data store)
# DATABASE_URL=postgresql://username:password@localhost:5432/yegnabiz
# DATABASE_SSL=true
# DATABASE_SSL_REJECT_UNAUTHORIZED=false
# DATABASE_POOL_MAX=10
